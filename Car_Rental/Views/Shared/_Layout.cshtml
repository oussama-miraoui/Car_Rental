<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootswatch/4.6.1/materia/bootstrap.min.css" integrity="sha512-pT2nPljr3bMBfzrib2bICuziqGd9faZ/99ZQj4orbFOwnktSLbqcaAeU3u4jffzywAehove7/dLN3RT668m03g==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons"
          rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css"
          integrity="sha512-iBBXm8fW90+nuLcSKlbmrPcLa0OT92xO1BIsZ+ywDWZCvqsWgccV3gFoRBv0z+8dLJgyAHIhR35VZc2oM/gI1w=="
          crossorigin="anonymous" />
    <link href="~/Content/Css/profile_dropdown.css" rel="stylesheet" />
    <link href="~/Content/Css/spur.css" rel="stylesheet" />

    <style>
        .btn-voiture {
            background: #FFD105;
        }

            .btn-voiture:hover {
                background: #ffffff;
            }

        .card:hover {
            box-shadow: 0 0 0 1px #FFD105;
        }

        .card-img-top {
            width: 100%;
            height: 21vw;
            object-fit: cover;
        }

        #footer {
            border-top: 4px solid #FFD105;
            padding: 30px;
        }
    </style>
</head>
<body>

    <nav class="navbar navbar-expand-lg navbar-light bg-light" style="font-size: 15px; font-weight: bold; border-bottom: 5px solid #FFD105">
        <div class="container-fluid">
            <a class="navbar-brand" href="#"> <i class="fas fa-car"></i> Car<span style="color: #FFD105 ">Rent</span></a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor03" aria-controls="navbarColor03" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarColor03">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item">
                        @Html.ActionLink("Acceuil", "../Home/Index", null, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Nos véhicules", "../Voitures/Index", null, new { @class = "nav-link" })
                    </li>
                </ul>
                @if (Session["id_client"] != null)
                {
                    <div class="dropdown">
                        <button class="btn btn-light d-flex">
                            <span class="my-1">Salut, @Session["nom_client"] </span>
                            <span class="material-icons">
                                expand_more
                            </span>
                        </button>
                        <div class="dropdown-content">
                            @if ((bool)Session["is_admin"] == true)
                            {

                                @Html.ActionLink("DASHBOARD", "Dashboard", "Admin", new { area = "" }, null)
                            }
                            @Html.ActionLink("Mes réservations", "../Voitures/ReservationList")
                            @Html.ActionLink("Se déconnecter", "../Accounts/Logout")
                        </div>

                    </div>
                }
                else
                {
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            @Html.ActionLink("Se connecter", "../Accounts/Login", null, new { @class = "nav-link" })
                        </li>
                        <li class="nav-item">
                            @Html.ActionLink("Créer un compte", "../Accounts/Signup", null, new { @class = "nav-link" })
                        </li>
                    </ul>
                }
            </div>
        </div>
    </nav>
    <div class=" body-content">
        @RenderBody()

        <footer class="bg-light text-center" id="footer">
            <p>&copy; @DateTime.Now.Year - CarRent</p>
        </footer>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js" integrity="sha384-9/reFTGAW83EW2RDu2S0VKaIzap3H66lZH81PoYlFhbGU+6BZp6G7niu735Sk7lN" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/js/bootstrap.min.js" integrity="sha384-VHvPCCyXqtD5DqJeNxl2dtTyhF78xXNXdkwX1CZeRusQfRKp+tA7hAShOK/B/fQ2" crossorigin="anonymous"></script>

    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/Scripts/spur.js"></script>

    @RenderSection("Scripts", required: false)


</body>
</html>

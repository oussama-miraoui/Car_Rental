@using Car_Rental.Models;
@model Tuple<List<Client>, List<Voiture>, List<Location>>


@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="container-fluid">
    <div class="row dash-row">
        <div class="col-xl-4">
            <div class="stats stats-primary">
                <h3 class="stats-title"> Utilisateurs </h3>
                <div class="stats-content">
                    <div class="stats-icon">
                        <i class="fas fa-user"></i>
                    </div>
                    <div class="stats-data">
                        <div class="stats-number">@Model.Item1.Count()</div>
                        <div class="stats-change">
                            @*<span class="stats-percentage">+25%</span>
                                <span class="stats-timeframe">from last month</span>*@
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-4">
            <div class="stats stats-success ">
                <h3 class="stats-title"> Véhicules </h3>
                <div class="stats-content">
                    <div class="stats-icon">
                        <i class="fas fa-car"></i>
                    </div>
                    <div class="stats-data">
                        <div class="stats-number">@Model.Item2.Count()</div>
                        @*<div class="stats-change">
                            <span class="stats-percentage">+17.5%</span>
                            <span class="stats-timeframe">from last month</span>
                        </div>*@
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-4">
            <div class="stats stats-danger">
                <h3 class="stats-title"> Réservations </h3>
                <div class="stats-content">
                    <div class="stats-icon">
                        <i class="fas fa-cart-arrow-down"></i>
                    </div>
                    <div class="stats-data">
                        <div class="stats-number">@Model.Item3.Count()</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@model IEnumerable<Car_Rental.Models.Modèle>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Liste des modèles</h2>

<p>
    @Html.ActionLink("Ajouter", "Create", null, new { @class = "btn btn-primary" })
</p>
<table class="table table-hover table-bordered w-75">
    <tr  class="bg-light">
        <th>
            @Html.DisplayNameFor(model => model.Marque)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Serie)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr  class="bg-white">
        <td>
            @Html.DisplayFor(modelItem => item.Marque)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Serie)
        </td>
        <td class="w-25 text-center">
            <a href="@Url.Action("Edit", "Modèle",new { id = item.Id_modele })" class="btn btn-primary btn-sm">
                <i class="fas fa-edit"></i>
            </a>
            <a href="@Url.Action("Delete", "Modèle",new { id = item.Id_modele })"
               class="btn btn-danger btn-sm"
               onclick="return confirm('Êtes-vous sûr? ')">
                <i class="fas fa-trash"></i>
            </a>
        </td>
    </tr>
}

</table>
